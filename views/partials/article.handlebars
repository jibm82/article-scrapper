<div class="article" data-id="{{id}}">
  <div class="article-header">
    <h4 class="article-publish-date">{{publish_date}}</h4>
    <h3 class="article-title">{{title}}</h3>
  </div>
  <a href="{{url}}">
    <img src="{{image}}" class="img-fluid" alt="Image for {{title}}">
  </a>
  <div class="article-summary">
    {{summary}}
  </div>
</div>